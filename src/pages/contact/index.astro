  </div>
</Layout>

<style is:global>
  .title_section {
    height: 100vh;
    width: 100vw;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 100px;
    font-weight: 600;
    color: white;
    letter-spacing: 10px;
    background-image: url('/img_16.jpg');
    background-size: cover;
    background-position: center center;
  }
  .content_section {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 50px;
    position: relative;
  }
  .content_section>div {
    height: 50vh;
    width: 20vw;
    margin: 20px;
    display: flex;
    flex-direction: column;
    align-items: center;
    border: solid rgb(229 231 235) 2px;
    border-radius: 20px;
    .title {
      /* color: white; */
      font-size: 25px;
      margin-top: 18px;
    }

    .text_box {
      flex: 1;
      position: relative;
      width: 80%;
      margin-top: 20px;
      .text {
        position: relative;
        /* color: white; */
        font-size: 16px;
        text-align: center;
        margin: 20px;
        height: 50%;
        display: flex; 
        justify-content: center;
        align-items: center;
        z-index: 1;
      }
    }
  }
  .content_section>div:hover {
    transition: 0.4s;
    transform: translateY(-20px) scale(1.05);
    box-shadow: 0px 0px 36px rgba(0, 0, 0, 0.01);
  }

</style>
