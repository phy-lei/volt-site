---
import Layout from '@/layouts/Layout.astro';
---

<Layout title="辐特佳新能源">
  <div class="title_section">
    联系我们
  </div>
  <div class="cotainer">
  </div>
</Layout>

<style is:global>
  .title_section {
    height: 100vh;
    width: 100vw;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 100px;
    font-weight: 600;
    color: white;
    letter-spacing: 10px;
    background-image: url('/img_16.jpg');
    background-size: cover;
    background-position: center center;
  }
  .cotainer {
    div {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 60vh;
    }
  }

</style>
