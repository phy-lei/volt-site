---
import Layout from '@/layouts/Layout.astro';
---

<Layout title="辐特佳新能源">
  <div class="title_section">
    联系我们
  </div>
  <div class="content_section">
    <div class="item_1">
      <div class="title">全国服务热线</div>
      <div class="text_box">
        <div class="text">4008-613-617</div>
      </div>
    </div>
    <div class="item_2">
      <div class="title">办公地址</div>
      <div class="text_box">
        <div class="text">上海市宝山区军工路5169号A9</div>
      </div>
    </div>
    <div class="item_3">
      <i class="fas fa-shopping-cart"></i>
