---
import AdminLayout from '@/layouts/AdminLayout.astro';
import LogoSvg from '@/components/logo/logo';
import LoginButton from './_LoginButton';
---

<AdminLayout title="辐特佳新能源">
  <div
    class="flex min-h-screen items-center justify-center py-12 px-4 sm:px-6 lg:px-8 m-auto"
  >
    <div class="w-full flex flex-col items-center max-w-md space-y-8">
      <div class="flex flex-col items-center gap-8">
        <div class="text-[var(--main-color)]">
          <LogoSvg />
          <h1 class="text-black px-2">辐特佳新能源</h1>
        </div>
        <div class="flex items-center">
          账号：
          <input
            type="text"
            class="block flex-1 rounded-md border-0 py-1.5 px-3 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-[var(--main-color)] sm:text-sm sm:leading-6"
            placeholder="请输入你的账号"
          />
        </div>
        <div class="flex items-center">
          密码：
          <input
            type="password"
            class="block flex-1 rounded-md border-0 py-1.5 px-3 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-[var(--main-color)] sm:text-sm sm:leading-6"
            placeholder="请输入你的密码"
          />
        </div>
        <div class="flex w-100%">
          <LoginButton client:load>登录</LoginButton>
        </div>
      </div>
    </div>
  </div>
</AdminLayout>
